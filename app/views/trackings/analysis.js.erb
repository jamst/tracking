$(".whmall_cover").remove();
$("body").append("<%= j render('analysis')%>");

$(window).on('resize',function(event) {
  //缩放页面重新计算slide_body高度
  $('.slide_body').css('height',$(this).height());
});
//滚动条
$(".slide_body").panel({iWheelStep:32});
//关闭按钮
$('.slide-close').on('click', function() {
  close_slide();
});
//关闭table右侧菜单
function close_slide() {
  $('.whmall_slide').animate({
    'width': '926px',
    'top': '0px',
    'bottom': '0px',
    'z-index': '1000',
    'right': '-946px'
  },whmall_cover_hide);
}
//开启table右侧菜单
function open_slide() {
  $('.whmall_cover').show();
  $('.whmall_slide').animate({
    'width': '926px',
    'top': '0px',
    'bottom': '0px',
    'z-index': '1001',
    'right': '0px'
  });
}

$(".whmall_slide").on("click", function(e) {
  e.stopPropagation();
});
//点击其他地方关闭右侧菜单
$(".whmall_cover").on("click", function() {
  close_slide();
});
function whmall_cover_hide() {
  $('.whmall_cover').hide();
}
open_slide();
var show_height=$(window).height();
//根据屏幕高度设置slide_body高度
$('.slide_body').css('height',show_height);