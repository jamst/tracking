<% if @page_tag.errors.blank? %>
$("#page_tag_<%= @page_tag.id %>").replaceWith("<%= j(render partial: 'list', locals: { page_tag: @page_tag} ) %>");
$("#page_tag_modal").modal('hide');
<% else %>
$(".red.pointing").remove();
$(".field").removeClass('error');
<% @page_tag.errors.messages.each do |key, value| %>
//parent()方法：返回被选中元素的父元素
$("#page_tag_<%= key %>").parent().addClass('error');
$("#page_tag_<%= key %>").parent().append("<div class='ui basic red pointing prompt label transition visible'><%= value[0] %></div>");
<% end %>
<% end %>


