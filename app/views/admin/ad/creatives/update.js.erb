<% if @creative.errors.blank? %>
  $("#creative_<%= @creative.id %>").replaceWith("<%= j(render partial: 'list', locals: { creative: @creative} ) %>");
  $("#creative_modal").modal('hide');
<% else %>
  $(".red.pointing").remove();
  $(".field").removeClass('error');
  <% @creative.errors.messages.each do |key, value| %>
    //parent()方法：返回被选中元素的父元素
    $("#creative_<%= key %>").parent().addClass('error');
    $("#creative_<%= key %>").parent().append("<div class='ui basic red pointing prompt label transition visible'><%= value[0] %></div>");
  <% end %>
<% end %>


