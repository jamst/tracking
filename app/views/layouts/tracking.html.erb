<!DOCTYPE html>
<html>
  <head>
    <meta content='text/html; charset=utf-8' http-equiv='Content-Type'>
    <title>Pre-report</title>
    <%= stylesheet_link_tag 'admin/application' %>
    <%= javascript_include_tag 'admin/application' %>
    <%= csrf_meta_tags %>
    <style type="text/css">
	    .index_page {
		    position: relative;
		    background: url(/assets/index_bg.png);
        background-repeat: repeat-y;
		    background-size: auto
		}
    </style>
  </head>
  <body class="index_page">
    <%= render 'shared/admin/top_bar' %>
    <div class="pusher " >
      <div class="ui fluid container" >
        <div class="ui two column grid">

          <div class="side menu close_menu" id="sideMenu">
            <%= render 'shared/admin/sidebar' %>
          </div>

          <div class="sixteen wide column " id="content">
            <div class="thirteen wide column ">
              <%= yield %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <%= yield :scripts %>
    <script type="text/javascript">
      // function refresh_tracking(){

      //   console.log('aaaa');
      //   $.ajax({
      //     url: '/admin/trackings',
      //     type: "get",
      //     dataType: 'script'
      //   });
      // }
      // setInterval('refresh_tracking()',20000)//指定20秒刷新一次

      //定时器名称
      var refresh_tracking;
      //开启刷新
      function a(num){
         console.log('aaaa');
        $.ajax({
          url: '/admin/trackings',
          type: "get",
          dataType: 'script'
        });
        refresh_tracking = setInterval('refresh_tracking()',num)//指定20秒刷新一次
      }
      //停止刷新
      function b(){
        clearInterval(refresh_tracking);
      }

      $('.btn_a').on('click',function(){
          //接收参数
        a();
      });

      $('.btn_b').on('click',function(){
        b();
      });
      
    </script>
    
  </body>
</html>
