<div class="ui modal" id="release_modal">
  <i class="close icon"></i>
  <h2 class="ui dividing header">合并报表设置</h2>
  <div class="content">
    <%= simple_form_for @temporary_report, url: composite_report_temporary_reports_path, remote: true, method: :get do |f| %>
        <div class="two fields">
          <%= f.input :report_type, as: :select, collection: select_options_from_enum(TemporaryReport, :report_type), include_blank:false, wrapper_html: {style: 'display: block'}, input_html: {class: 'ui fluid dropdown'} %>
        </div>
        <%= hidden_field_tag :id,@temporary_report.id%>
        <%= f.text_area :composite_sentence %></br></br>
        <div class="column">
          <%= f.submit '提交', class: 'ui primary button' %>
        </div>
    <% end %>
  </div>
</div>

