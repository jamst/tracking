
<div class="ui grid">
  <div class="left floated fourteen wide column">
    <h3><font color="#ffffff">当前用户分析</font></h3>
  </div>
</div>

<div class="ui blue segment" style='background: rgba(255, 255, 255, 0.2);'>
  <table>
   <tr>
  <% 40.times.each do |i| %>
    <% i += 1%>
    <% if ( i%10== 0 && i != 0 ) %>
       <td style="width: 200px;" style="margin-bottom: 30px;">
          <div style="text-align: center;">
            <a data-remote="true" href="/desboard/analysis?tag=user&id=123" class="ui teal image label" >
              <%= image_tag 'male.jpg', class: 'ui avatar image' %><%= i %>
            </a>
          </div>
          <div style="margin-bottom: 15px; text-align: center;"><%= "李江锋#{i}" %></div>
       <td>
       </tr>  
       <tr style="margin-bottom: 30px;">
    <% else %>
       <td style="width: 200px;" style="margin-bottom: 30px;">
          <div style="text-align: center;">
            <a data-remote="true" href="/desboard/analysis?tag=user&id=123" class="ui blue image label" >
                <%= image_tag 'male.jpg', class: 'ui avatar image' %><%= i %>
            </a>
          </div>
          <div style="margin-bottom: 15px;text-align: center;"><%= "李江锋#{i}" %></div>
       </td>
    <% end %>  
  <% end %>
  </tr>
  </table>
</div>


